<h2>Submit Report</h2>
<div>
    <form>
        <label for="name">Name</label>
        <input id="name" class="form-control" type="text" />

        <label for="date">Date</label>
        <input id="date" class="form-control" style="padding: 0 5px" type="date" />

        <fieldset>
            <legend style="margin-bottom: 0">Precipitation</legend>
            <div class="radio">
                <label><input type="radio" name="prec" /> None</label>
            </div>
            <div class="radio">
                <label><input type="radio" name="prec" /> Rain</label>
            </div>
            <div class="radio">
                <label><input type="radio" name="prec" /> Snow</label>
            </div>
        </fieldset>

        <fieldset>
            <legend style="margin-bottom: 0">Visibility</legend>
            <div class="radio">
                <label><input type="radio" name="vis" /> None</label>
            </div>
            <div class="radio">
                <label><input type="radio" name="vis" /> Poor</label>
            </div>
            <div class="radio">
                <label><input type="radio" name="vis" /> Good</label>
            </div>
            <div class="radio">
                <label><input type="radio" name="vis" /> Excellent</label>
            </div>
        </fieldset>

        <label for="wind">Wind</label>
        <input id="wind" class="form-control" type="number" />
    </form>
</div>
<script>
    $(document).ready(function () {
        $(".owl-carousel").owlCarousel({
            margin: 10,
            nav: true,
            items: 5,
            dots: false
        });
    });
</script>